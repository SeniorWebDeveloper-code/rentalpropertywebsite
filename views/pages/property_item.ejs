<!DOCTYPE html>
<html lang="en">

<head>
  <link rel="stylesheet" href="/public/leafletmap/css/leaflet.css">
  <link rel="stylesheet" href="/public/css/property_item.css">
  <% include ../partials/head %>
</head>

<body>
  <header>
    <% include ../partials/header %>
  </header>

  <main>
    <section class="titlerow">
      <div class="container">
        <div class="row">
          <div class="col col-sm-12">
            <h1>Properties to Rent</h1>
          </div>
        </div>
      </div>
    </section>
    <section>
      <div style="display: flex">
        <div style="width: 50%;border: 2px solid black;">
          <img id="FMP-target" alt="" src="https://a0.muscache.com/im/pictures/0f00efba-b376-4d24-ab1e-797746135dc0.jpg?aki_policy=xx_large" width="100%" height="100%">
        </div>
        <div style="width: 25%;border: 2px solid black;">
          <img id="FMP-target" alt="" src="https://a0.muscache.com/im/pictures/b38d7c58-19f5-41af-b8da-273220ce250e.jpg?aki_policy=large" width="100%" height="50%">
          <img id="FMP-target" alt="" src="https://a0.muscache.com/im/pictures/2ab23395-8106-4247-8861-b12b73112ac6.jpg?aki_policy=large" width="100%" height="50%">
        </div>
        <div style="width: 25%;border: 2px solid black;">
          <img id="FMP-target" alt="Bedroom" src="https://a0.muscache.com/im/pictures/2863e824-5f0d-48f2-a106-4ff0590c855b.jpg?aki_policy=large" width="100%" height="50%">
          <img id="FMP-target" alt="" src="https://a0.muscache.com/im/pictures/c5da06e6-d3ef-4be2-925f-e61105d666b1.jpg?aki_policy=large" width="100%" height="50%">
        </div>
      </div>
      <div>
      </div>
    </section>
    <section class="item-detail">
      <div class="container">
        <h2>Cosy Room Paris Center in the Marais</h2>
        <h5>2 Rooms</h5>
        <h5>Type: House</h5>
        <h5>Address: 63 Curzon St, Calne, Wiltshire, SN11 0DF</h5>
        <h5>Status: For sale</h5>
        <h5>Availability: Available</h5>
        <h5>Number of Room: 4</h5>
        <h5>Duration: 2019-09-03</h5>
        <h5>Price: $200,000</h5>
      </div>
    </section>
  </main>
  <footer>
    <% include ../partials/footer %>
    <script src="/public/leafletmap/js/leaflet.js"></script>
    <script>
      $('#country').change(function () {
        const country = $('#country').val();
        $.ajax({
          type: 'GET',
          url: '/getRegionList?Country=' + country,
          success: function(data) {
            const regionList = data.regionList;
            let html = '';
            for(let item of regionList){
              html += '<option>' + item['Region'] + '</option>';
            }
            $('#region').html(html);
          }
        });
      });
    </script>
  </footer>
</body>

</html>